<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:padding="8dp">

    <ImageView

        android:id="@+id/imgFotoRes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/imgFotoRes">

        <TextView
            android:id="@+id/RestNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/berkshire_swash"
            android:text="Nombre"
            android:textColor="#6D6D6D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/RestDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RestNombre"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="DirecciÃ³n"
            android:textColor="#6D6D6D" />

        <TextView
            android:id="@+id/RestHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/RestTelefono"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Horario"
            android:textAlignment="center"
            android:textColor="#6D6D6D"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RestTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RestDireccion"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Telefono"
            android:textColor="#6D6D6D" />

        <TextView
            android:id="@+id/ResCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RestTelefono"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/fondocategoria"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Categoria"
            android:textColor="#fff"
            android:textSize="14dp" />

    </RelativeLayout>

</RelativeLayout>